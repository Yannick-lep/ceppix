<style>
    .preview-films {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 1rem;
    }

    .card-film {
        padding: .5rem;
        width: 24%;
        border-radius: 15px;
        -webkit-box-shadow: 5px 5px 15px 5px rgba(0, 0, 0, 0.27);
        box-shadow: 5px 5px 15px 5px rgba(0, 0, 0, 0.27);
        margin-bottom: 1rem;
    }
    .card-film:last-child {
        margin-right: auto;
        margin-left: 1.5%;
    }
    .title{
        font-weight: 900;
    }
</style>
<div>
    {% for result in results %}
    <div class="card-film">
        <div><img src={{ result.img }} alt=""></div>
        <p class="title">{{ result.title }}</p>
        <p class="plot">{{ result.plot }}</p>
        <p class="year">{{ result.year }}</p>
        <p class="cast">{{ result.cast }}</p>
        <p class="directors">{{ result.directors }}</p>
    </div>

    {% else %}
    Pas de resultats

    {% endfor %}
</div>